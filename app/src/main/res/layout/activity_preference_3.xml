<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/white"
  android:padding="16dp">

  <!-- Title Text -->
  <TextView
    android:id="@+id/title3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="어떤 음식을 즐겨 드시나요?"
    android:textSize="24sp"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp" />

  <!-- Subtitle Text -->
  <TextView
    android:id="@+id/subtitle3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="여러분의 입맛에 맞는 음식 유형을 추천해드립니다."
    android:textSize="16sp"
    android:textColor="@android:color/darker_gray"
    android:layout_below="@id/title3"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="8dp" />

  <!-- ScrollView for Images -->
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_below="@id/subtitle3"
    android:layout_above="@id/nextButton3"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp">

    <!-- ConstraintLayout for Images -->
    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp">

      <!-- FrameLayout for Image and Text -->
      <FrameLayout
        android:id="@+id/korea_food"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintHeight_percent="0.45">

        <ImageView
          android:id="@+id/food1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:src="@drawable/korea_food"
          android:background="?attr/selectableItemBackground"
          android:clickable="true"
          android:focusable="true" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="한식"
          android:textSize="18sp"
          android:textColor="@android:color/white"
          android:gravity="center"
          android:background="#80000000"
          android:layout_gravity="bottom" />
      </FrameLayout>

      <FrameLayout
        android:id="@+id/china_food"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintHeight_percent="0.55">

        <ImageView
          android:id="@+id/food2"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:src="@drawable/china_food"
          android:background="?attr/selectableItemBackground"
          android:clickable="true"
          android:focusable="true" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="중식"
          android:textSize="18sp"
          android:textColor="@android:color/white"
          android:gravity="center"
          android:background="#80000000"
          android:layout_gravity="bottom" />
      </FrameLayout>

      <FrameLayout
        android:id="@+id/dessert"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/korea_food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintHeight_percent="0.55">

        <ImageView
          android:id="@+id/food3"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:src="@drawable/dessert"
          android:background="?attr/selectableItemBackground"
          android:clickable="true"
          android:focusable="true" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="일식"
          android:textSize="18sp"
          android:textColor="@android:color/white"
          android:gravity="center"
          android:background="#80000000"
          android:layout_gravity="bottom" />
      </FrameLayout>

      <FrameLayout
        android:id="@+id/italy_food"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/china_food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintHeight_percent="0.45">

        <ImageView
          android:id="@+id/food4"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:src="@drawable/italy_food"
          android:background="?attr/selectableItemBackground"
          android:clickable="true"
          android:focusable="true" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="양식"
          android:textSize="18sp"
          android:textColor="@android:color/white"
          android:gravity="center"
          android:background="#80000000"
          android:layout_gravity="bottom" />
      </FrameLayout>

      <FrameLayout
        android:id="@+id/japan_food"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/italy_food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintHeight_percent="0.45">

        <ImageView
          android:id="@+id/food5"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:src="@drawable/japan_food"
          android:background="?attr/selectableItemBackground"
          android:clickable="true"
          android:focusable="true" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="양식"
          android:textSize="18sp"
          android:textColor="@android:color/white"
          android:gravity="center"
          android:background="#80000000"
          android:layout_gravity="bottom" />
      </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>

  <!-- Next Button -->
  <Button
    android:id="@+id/nextButton3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="선호 순서대로 선택해주세요"
    android:textSize="16sp"
    android:textColor="@android:color/white"
    android:backgroundTint="@color/blue_dark"
    android:padding="12dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:enabled="false" />
</RelativeLayout>
