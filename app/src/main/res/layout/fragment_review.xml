<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FFFFFF"
  tools:context=".MainActivity">

  <!-- 상단 텍스트 -->
  <TextView
    android:id="@+id/title_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Find your Happiness with Us!"
    android:textSize="24sp"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    android:layout_marginTop="24dp"
    android:layout_marginStart="16dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

  <!-- 검색 창 -->
  <LinearLayout
    android:id="@+id/search_layout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_rounded_corner"
    android:layout_margin="16dp"
    android:padding="8dp"
    android:gravity="center_vertical"
    app:layout_constraintTop_toBottomOf="@id/title_text"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <EditText
      android:id="@+id/search_prompt"
      android:layout_width="0dp"
      android:layout_height="48dp"
      android:layout_weight="1"
      android:hint="장소를 입력하세요."
      android:textSize="16sp"
      android:background="@android:color/transparent"
      android:padding="8dp"
      android:inputType="text" />

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:src="@drawable/ic_search"
      android:layout_marginStart="8dp" />
  </LinearLayout>

  <!-- Popular 섹션 -->
  <TextView
    android:id="@+id/popular_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Popular"
    android:textSize="18sp"
    android:textColor="@android:color/black"
    android:layout_marginTop="10dp"
    android:layout_marginStart="16dp"
    app:layout_constraintTop_toBottomOf="@id/search_layout"
    app:layout_constraintStart_toStartOf="parent" />

  <TextView
    android:id="@+id/popular_view_all"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="전체보기"
    android:textSize="14sp"
    android:textColor="@android:color/holo_blue_light"
    android:layout_marginEnd="16dp"
    app:layout_constraintTop_toTopOf="@id/popular_title"
    app:layout_constraintEnd_toEndOf="parent" />

  <HorizontalScrollView
    android:id="@+id/popular_scroll"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:scrollbars="none"
    app:layout_constraintTop_toBottomOf="@id/popular_title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <!-- 첫 번째 인기 아이템 -->
      <FrameLayout
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginEnd="16dp">

        <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:src="@drawable/ph_review_popular_image1"
          android:contentDescription="@null"
          android:background="?android:attr/selectableItemBackgroundBorderless"
          android:clipToOutline="true"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:padding="8dp"
          android:gravity="bottom">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_background"
            android:padding="8dp">

            <TextView
              android:id="@+id/popular_title1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="해운대"
              android:textSize="16sp"
              android:textColor="@android:color/black"
              android:layout_marginBottom="4dp" />

            <TextView
              android:id="@+id/popular_location1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="9 해운대, South Korea"
              android:textSize="14sp"
              android:textColor="@android:color/darker_gray"
              android:layout_marginBottom="4dp" />

            <TextView
              android:id="@+id/popular_distance1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="16.5 km"
              android:textSize="14sp"
              android:textColor="@android:color/darker_gray"
              android:layout_marginBottom="4dp" />

            <Button
              android:id="@+id/popular_button1"
              android:layout_width="wrap_content"
              android:layout_height="20dp"
              android:text="자세히"
              android:textSize="14sp"
              android:textColor="@android:color/holo_blue_light"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:layout_gravity="end"/>
          </LinearLayout>
        </LinearLayout>
      </FrameLayout>

      <!-- 두 번째 인기 아이템 -->
      <FrameLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp">

        <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:src="@drawable/ph_review_popular_image2"
          android:contentDescription="@null"
          android:background="?android:attr/selectableItemBackgroundBorderless"
          android:clipToOutline="true" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="250dp"
          android:orientation="vertical"
          android:padding="8dp"
          android:gravity="bottom">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_background"
            android:padding="8dp">

            <TextView
              android:id="@+id/popular_title2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="광안리"
              android:textSize="16sp"
              android:textColor="@android:color/black"
              android:layout_marginBottom="4dp" />

            <TextView
              android:id="@+id/popular_location2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="8 광안리, South Korea"
              android:textSize="14sp"
              android:textColor="@android:color/darker_gray"
              android:layout_marginBottom="4dp" />

            <TextView
              android:id="@+id/popular_distance2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="16.5 km"
              android:textSize="14sp"
              android:textColor="@android:color/darker_gray"
              android:layout_marginBottom="4dp" />

            <Button
              android:id="@+id/popular_button2"
              android:layout_width="wrap_content"
              android:layout_height="20dp"
              android:text="자세히"
              android:textSize="14sp"
              android:textColor="@android:color/holo_blue_light"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:layout_gravity="end"/>
          </LinearLayout>
        </LinearLayout>
      </FrameLayout>

      <!-- 세 번째 인기 아이템 -->
      <FrameLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:src="@drawable/ph_review_popular_image3"
          android:contentDescription="@null"
          android:background="?android:attr/selectableItemBackgroundBorderless"
          android:clipToOutline="true"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="250dp"
          android:orientation="vertical"
          android:padding="8dp"
          android:gravity="bottom">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_background"
            android:padding="8dp">

            <TextView
              android:id="@+id/popular_title3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Jimburan"
              android:textSize="16sp"
              android:textColor="@android:color/black"
              android:layout_marginBottom="4dp" />

            <TextView
              android:id="@+id/popular_location3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="7 Jimburan, Indonesia"
              android:textSize="14sp"
              android:textColor="@android:color/darker_gray"
              android:layout_marginBottom="4dp" />

            <TextView
              android:id="@+id/popular_distance3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="10.5 km"
              android:textSize="14sp"
              android:textColor="@android:color/darker_gray"
              android:layout_marginBottom="4dp" />

            <Button
              android:id="@+id/popular_button3"
              android:layout_width="wrap_content"
              android:layout_height="20dp"
              android:text="자세히"
              android:textSize="14sp"
              android:textColor="@android:color/holo_blue_light"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:layout_gravity="end"/>
          </LinearLayout>
        </LinearLayout>
      </FrameLayout>

    </LinearLayout>
  </HorizontalScrollView>



  <!-- 추천 섹션 -->
  <TextView
    android:id="@+id/recommended_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="추천"
    android:textSize="18sp"
    android:textColor="@android:color/black"
    android:layout_marginStart="16dp"
    app:layout_constraintTop_toBottomOf="@id/popular_scroll"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="16dp"/>

  <TextView
    android:id="@+id/recommended_view_all"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="전체보기"
    android:textSize="14sp"
    android:textColor="@android:color/holo_blue_light"
    android:layout_marginEnd="16dp"
    app:layout_constraintTop_toTopOf="@id/recommended_title"
    app:layout_constraintEnd_toEndOf="parent" />

  <ScrollView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/recommended_title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="8dp">

    <LinearLayout
      android:id="@+id/recommended_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingStart="16dp"
      android:paddingEnd="16dp">

      <!-- 첫 번째 추천 아이템 -->
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/bg_rounded_background_with_border_gray"
        android:layout_marginBottom="8dp">

        <ImageView
          android:id="@+id/recommended_image1"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_alignParentStart="true"
          android:src="@drawable/ph_reveiw_image1"
          android:scaleType="centerCrop" />

        <TextView
          android:id="@+id/recommended_title1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="북한산"
          android:textSize="16sp"
          android:textColor="@android:color/black"
          android:layout_toEndOf="@id/recommended_image1"
          android:layout_marginStart="16dp" />

        <TextView
          android:id="@+id/recommended_location1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Panjer, South Denpasar"
          android:textSize="14sp"
          android:textColor="@android:color/darker_gray"
          android:layout_below="@id/recommended_title1"
          android:layout_toEndOf="@id/recommended_image1"
          android:layout_marginStart="16dp" />

        <TextView
          android:id="@+id/recommended_distance1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="3.3 km"
          android:textSize="14sp"
          android:textColor="@android:color/darker_gray"
          android:layout_below="@id/recommended_location1"
          android:layout_toEndOf="@id/recommended_image1"
          android:layout_marginStart="16dp" />

        <TextView
          android:id="@+id/recommended_button1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="자세히"
          android:textSize="14sp"
          android:textColor="@android:color/holo_blue_light"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:background="?attr/selectableItemBackgroundBorderless" />
      </RelativeLayout>

      <!-- 두 번째 추천 아이템 -->
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/bg_rounded_background_with_border_gray"
        android:layout_marginBottom="8dp">

        <ImageView
          android:id="@+id/recommended_image2"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_alignParentStart="true"
          android:src="@drawable/ph_review_image2"
          android:scaleType="centerCrop" />

        <TextView
          android:id="@+id/recommended_title2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="정동진 해변"
          android:textSize="16sp"
          android:textColor="@android:color/black"
          android:layout_toEndOf="@id/recommended_image2"
          android:layout_marginStart="16dp" />

        <TextView
          android:id="@+id/recommended_location2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Sanur, South Denpasar"
          android:textSize="14sp"
          android:textColor="@android:color/darker_gray"
          android:layout_below="@id/recommended_title2"
          android:layout_toEndOf="@id/recommended_image2"
          android:layout_marginStart="16dp" />

        <TextView
          android:id="@+id/recommended_distance2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="10.4 km"
          android:textSize="14sp"
          android:textColor="@android:color/darker_gray"
          android:layout_below="@id/recommended_location2"
          android:layout_toEndOf="@id/recommended_image2"
          android:layout_marginStart="16dp" />

        <TextView
          android:id="@+id/recommended_button2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="자세히"
          android:textSize="14sp"
          android:textColor="@android:color/holo_blue_light"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:background="?attr/selectableItemBackgroundBorderless" />
      </RelativeLayout>

      <!-- 세 번째 추천 아이템 -->
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/bg_rounded_background_with_border_gray"
        android:layout_marginBottom="8dp">

        <ImageView
          android:id="@+id/recommended_image3"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_alignParentStart="true"
          android:src="@drawable/ph_review_image3"
          android:scaleType="centerCrop" />

        <TextView
          android:id="@+id/recommended_title3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="울왕리 해변"
          android:textSize="16sp"
          android:textColor="@android:color/black"
          android:layout_toEndOf="@id/recommended_image3"
          android:layout_marginStart="16dp" />

        <TextView
          android:id="@+id/recommended_location3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Sanur, South Denpasar"
          android:textSize="14sp"
          android:textColor="@android:color/darker_gray"
          android:layout_below="@id/recommended_title3"
          android:layout_toEndOf="@id/recommended_image3"
          android:layout_marginStart="16dp" />

        <TextView
          android:id="@+id/recommended_distance3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="5.6 km"
          android:textSize="14sp"
          android:textColor="@android:color/darker_gray"
          android:layout_below="@id/recommended_location3"
          android:layout_toEndOf="@id/recommended_image3"
          android:layout_marginStart="16dp" />

        <TextView
          android:id="@+id/recommended_button3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="자세히"
          android:textSize="14sp"
          android:textColor="@android:color/holo_blue_light"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:background="?attr/selectableItemBackgroundBorderless" />
      </RelativeLayout>

      <!-- 네 번째 추천 아이템 -->
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/bg_rounded_background_with_border_gray"
        android:layout_marginBottom="8dp">

        <ImageView
          android:id="@+id/recommended_image4"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_alignParentStart="true"
          android:src="@drawable/ph_review_image3"
          android:scaleType="centerCrop" />

        <TextView
          android:id="@+id/recommended_title4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="울왕리 해변"
          android:textSize="16sp"
          android:textColor="@android:color/black"
          android:layout_toEndOf="@id/recommended_image4"
          android:layout_marginStart="16dp" />

        <TextView
          android:id="@+id/recommended_location4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Sanur, South Denpasar"
          android:textSize="14sp"
          android:textColor="@android:color/darker_gray"
          android:layout_below="@id/recommended_title4"
          android:layout_toEndOf="@id/recommended_image4"
          android:layout_marginStart="16dp" />

        <TextView
          android:id="@+id/recommended_distance4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="5.6 km"
          android:textSize="14sp"
          android:textColor="@android:color/darker_gray"
          android:layout_below="@id/recommended_location4"
          android:layout_toEndOf="@id/recommended_image4"
          android:layout_marginStart="16dp" />

        <TextView
          android:id="@+id/recommended_button4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="자세히"
          android:textSize="14sp"
          android:textColor="@android:color/holo_blue_light"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:background="?attr/selectableItemBackgroundBorderless" />
      </RelativeLayout>
    </LinearLayout>
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
