<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FFFFFF"
  android:gravity="top"
  android:orientation="vertical"
  android:padding="16dp">


  <!-- 상단바 -->
  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <!-- Back Button -->
    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/backbtn_bg"
      android:contentDescription="뒤로가기 버튼입니다."
      android:padding="15dp"
      android:scaleType="fitCenter"
      android:src="@drawable/angle_left" />

    <!-- Title -->
    <TextView
      android:id="@+id/title"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:text="프로필 편집"
      android:textColor="#000000"
      android:textSize="20sp"
      android:textStyle="bold" />

    <!-- Edit Profile success Button -->
    <TextView
      android:id="@+id/edit_success"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="end"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:gravity="center"
      android:text="완료"
      android:textColor="@android:color/holo_orange_dark"
      android:textSize="20sp" />
  </LinearLayout>


  <!-- Profile Picture -->
  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/profile_image"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="80dp"
    android:src="@drawable/profile_img" />

  <!-- Name -->
  <TextView
    android:id="@+id/profile_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/profile_image"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:text="고재건"
    android:textColor="#000000"
    android:textSize="25sp"
    android:textStyle="bold" />

  <!-- edit profile image -->
  <TextView
    android:id="@+id/change_profile_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/profile_name"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="4dp"
    android:text="프로필 사진 바꾸기"
    android:textColor="@android:color/holo_orange_dark"
    android:textSize="15sp" />

  <TextView
    android:id="@+id/firstname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/change_profile_image"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="10dp"
    android:text="성"
    android:textColor="#000000"
    android:textSize="20dp" />

  <EditText
    android:id="@+id/text_firstname"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/firstname"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/rounded_corner"
    android:hint="First Name"
    android:inputType="textPersonName"
    android:padding="15dp" />

  <TextView
    android:id="@+id/lastName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/text_firstname"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="10dp"
    android:text="이름"
    android:textColor="#000000"
    android:textSize="20dp" />

  <EditText
    android:id="@+id/text_lastname"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/lastName"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/rounded_corner"
    android:hint="Last Name"
    android:inputType="textPersonName"
    android:padding="15dp" />

  <LinearLayout
    android:id="@+id/gender_age"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/text_lastname"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <RelativeLayout
      android:id="@+id/layout_gender"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_below="@id/text_lastname">

      <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="성별"
        android:textColor="#000000"
        android:textSize="20dp" />

      <EditText
        android:id="@+id/select_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rounded_corner"
        android:hint="-----"
        android:inputType="textPersonName"
        android:padding="15dp" />
    </RelativeLayout>

    <RelativeLayout
      android:id="@+id/layout_age"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_below="@id/text_lastname"
      android:layout_toRightOf="@id/layout_gender">

      <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="나이"
        android:textColor="#000000"
        android:textSize="20dp" />

      <EditText
        android:id="@+id/select_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/age"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/rounded_corner"
        android:hint="-----"
        android:inputType="textPersonName"
        android:padding="15dp" />
    </RelativeLayout>
  </LinearLayout>

  <TextView
    android:id="@+id/cp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/gender_age"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="10dp"
    android:text="전화번호"
    android:textColor="#000000"
    android:textSize="20dp" />

  <EditText
    android:id="@+id/text_cp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/cp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/rounded_corner"
    android:hint="010-xxxx-xxxx"
    android:inputType="textPersonName"
    android:padding="15dp" />

</RelativeLayout>