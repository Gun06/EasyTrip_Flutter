<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FFFFFF"
  tools:context=".MainActivity">

  <!-- 상단 텍스트 -->
  <TextView
    android:id="@+id/title_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:text="Find your Happiness with Us!"
    android:textColor="@android:color/black"
    android:textSize="24sp"
    android:textStyle="bold"
    android:layout_marginTop="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <!-- 검색 창 -->
  <LinearLayout
    android:id="@+id/search_layout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/bg_rounded_corner"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/title_text">

    <EditText
      android:id="@+id/search_prompt"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_weight="1"
      android:background="@android:color/transparent"
      android:hint="장소를 입력하세요."
      android:inputType="text"
      android:padding="8dp"
      android:textSize="15sp" />

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_marginStart="8dp"
      android:src="@drawable/ic_search" />
  </LinearLayout>

  <ScrollView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="15dp"
    app:layout_constraintTop_toBottomOf="@id/search_layout"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:paddingBottom="16dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingBottom="16dp">

      <!-- Popular 섹션 -->
      <TextView
        android:id="@+id/popular_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:text="Popular"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

      <TextView
        android:id="@+id/popular_view_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="-25dp"
        android:layout_marginBottom="5dp"
        android:text="전체보기"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="14sp"
        android:layout_gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/popular_title" />

      <HorizontalScrollView
        android:id="@+id/popular_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:scrollbars="none">

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <!-- 첫 번째 인기 아이템 -->
          <FrameLayout
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_marginEnd="16dp">

            <ImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_rounded_corner"
              android:clipToOutline="true"
              android:contentDescription="@null"
              android:scaleType="centerCrop"
              android:src="@drawable/ph_review_popular_image1" />

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="243dp"
              android:gravity="bottom"
              android:orientation="vertical"
              android:padding="8dp">

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_background"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                  android:id="@+id/popular_title1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="4dp"
                  android:text="해운대"
                  android:textColor="@android:color/black"
                  android:textSize="16sp" />

                <TextView
                  android:id="@+id/popular_location1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="4dp"
                  android:text="9 해운대, South Korea"
                  android:textColor="@android:color/darker_gray"
                  android:textSize="14sp" />

                <TextView
                  android:id="@+id/popular_distance1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="4dp"
                  android:text="16.5 km"
                  android:textColor="@android:color/darker_gray"
                  android:textSize="14sp" />

                <Button
                  android:id="@+id/popular_button1"
                  android:layout_width="40dp"
                  android:layout_height="20dp"
                  android:layout_gravity="end"
                  android:background="?attr/selectableItemBackgroundBorderless"
                  android:text="자세히"
                  android:textColor="@android:color/holo_blue_light"
                  android:textSize="14sp" />
              </LinearLayout>
            </LinearLayout>
          </FrameLayout>

          <!-- 두 번째 인기 아이템 -->
          <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp">

            <ImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_rounded_corner"
              android:clipToOutline="true"
              android:contentDescription="@null"
              android:scaleType="centerCrop"
              android:src="@drawable/ph_review_popular_image2" />

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="250dp"
              android:gravity="bottom"
              android:orientation="vertical"
              android:padding="8dp">

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_background"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                  android:id="@+id/popular_title2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="4dp"
                  android:text="광안리"
                  android:textColor="@android:color/black"
                  android:textSize="16sp" />

                <TextView
                  android:id="@+id/popular_location2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="4dp"
                  android:text="8 광안리, South Korea"
                  android:textColor="@android:color/darker_gray"
                  android:textSize="14sp" />

                <TextView
                  android:id="@+id/popular_distance2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="4dp"
                  android:text="16.5 km"
                  android:textColor="@android:color/darker_gray"
                  android:textSize="14sp" />

                <Button
                  android:id="@+id/popular_button2"
                  android:layout_width="40dp"
                  android:layout_height="20dp"
                  android:layout_gravity="end"
                  android:background="?attr/selectableItemBackgroundBorderless"
                  android:text="자세히"
                  android:textColor="@android:color/holo_blue_light"
                  android:textSize="14sp" />
              </LinearLayout>
            </LinearLayout>
          </FrameLayout>

          <!-- 세 번째 인기 아이템 -->
          <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <ImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_rounded_corner"
              android:clipToOutline="true"
              android:contentDescription="@null"
              android:scaleType="centerCrop"
              android:src="@drawable/ph_review_popular_image2" />

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="250dp"
              android:gravity="bottom"
              android:orientation="vertical"
              android:padding="8dp">

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_background"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                  android:id="@+id/popular_title3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="4dp"
                  android:text="Jimburan"
                  android:textColor="@android:color/black"
                  android:textSize="16sp" />

                <TextView
                  android:id="@+id/popular_location3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="4dp"
                  android:text="7 Jimburan, Indonesia"
                  android:textColor="@android:color/darker_gray"
                  android:textSize="14sp" />

                <TextView
                  android:id="@+id/popular_distance3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="4dp"
                  android:text="10.5 km"
                  android:textColor="@android:color/darker_gray"
                  android:textSize="14sp" />

                <Button
                  android:id="@+id/popular_button3"
                  android:layout_width="40dp"
                  android:layout_height="20dp"
                  android:layout_gravity="end"
                  android:background="?attr/selectableItemBackgroundBorderless"
                  android:text="자세히"
                  android:textColor="@android:color/holo_blue_light"
                  android:textSize="14sp" />
              </LinearLayout>
            </LinearLayout>
          </FrameLayout>

        </LinearLayout>
      </HorizontalScrollView>

      <!-- 추천 섹션 -->
      <TextView
        android:id="@+id/recommended_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:text="추천"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/recommended_view_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:text="전체보기"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="14sp"
        android:layout_gravity="end"
        android:layout_marginTop="-24dp"/>

      <LinearLayout
        android:id="@+id/recommended_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <!-- 첫 번째 추천 아이템 -->
        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:layout_margin="4dp"
          app:cardCornerRadius="16dp"
          app:cardElevation="8dp">

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
              android:id="@+id/recommended_image1"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_alignParentStart="true"
              android:scaleType="centerCrop"
              android:src="@drawable/ph_reveiw_image1" />

            <TextView
              android:id="@+id/recommended_title1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_toEndOf="@id/recommended_image1"
              android:text="북한산"
              android:textColor="@android:color/black"
              android:textSize="16sp" />

            <TextView
              android:id="@+id/recommended_location1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/recommended_title1"
              android:layout_marginStart="16dp"
              android:layout_toEndOf="@id/recommended_image1"
              android:text="Panjer, South Denpasar"
              android:textColor="@android:color/darker_gray"
              android:textSize="14sp" />

            <TextView
              android:id="@+id/recommended_distance1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/recommended_location1"
              android:layout_marginStart="16dp"
              android:layout_toEndOf="@id/recommended_image1"
              android:text="3.3 km"
              android:textColor="@android:color/darker_gray"
              android:textSize="14sp" />

            <TextView
              android:id="@+id/recommended_button1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_centerVertical="true"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:text="자세히"
              android:textColor="@android:color/holo_blue_light"
              android:textSize="14sp" />
          </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- 두 번째 추천 아이템 -->
        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:layout_margin="4dp"
          app:cardCornerRadius="16dp"
          app:cardElevation="8dp">

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
              android:id="@+id/recommended_image2"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_alignParentStart="true"
              android:scaleType="centerCrop"
              android:src="@drawable/ph_review_image2" />

            <TextView
              android:id="@+id/recommended_title2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_toEndOf="@id/recommended_image2"
              android:text="정동진 해변"
              android:textColor="@android:color/black"
              android:textSize="16sp" />

            <TextView
              android:id="@+id/recommended_location2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/recommended_title2"
              android:layout_marginStart="16dp"
              android:layout_toEndOf="@id/recommended_image2"
              android:text="Sanur, South Denpasar"
              android:textColor="@android:color/darker_gray"
              android:textSize="14sp" />

            <TextView
              android:id="@+id/recommended_distance2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/recommended_location2"
              android:layout_marginStart="16dp"
              android:layout_toEndOf="@id/recommended_image2"
              android:text="10.4 km"
              android:textColor="@android:color/darker_gray"
              android:textSize="14sp" />

            <TextView
              android:id="@+id/recommended_button2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_centerVertical="true"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:text="자세히"
              android:textColor="@android:color/holo_blue_light"
              android:textSize="14sp" />
          </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- 세 번째 추천 아이템 -->
        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:layout_margin="4dp"
          app:cardCornerRadius="16dp"
          app:cardElevation="8dp">

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
              android:id="@+id/recommended_image3"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_alignParentStart="true"
              android:scaleType="centerCrop"
              android:src="@drawable/ph_review_image3" />

            <TextView
              android:id="@+id/recommended_title3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_toEndOf="@id/recommended_image3"
              android:text="울왕리 해변"
              android:textColor="@android:color/black"
              android:textSize="16sp" />

            <TextView
              android:id="@+id/recommended_location3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/recommended_title3"
              android:layout_marginStart="16dp"
              android:layout_toEndOf="@id/recommended_image3"
              android:text="Sanur, South Denpasar"
              android:textColor="@android:color/darker_gray"
              android:textSize="14sp" />

            <TextView
              android:id="@+id/recommended_distance3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/recommended_location3"
              android:layout_marginStart="16dp"
              android:layout_toEndOf="@id/recommended_image3"
              android:text="5.6 km"
              android:textColor="@android:color/darker_gray"
              android:textSize="14sp" />

            <TextView
              android:id="@+id/recommended_button3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_centerVertical="true"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:text="자세히"
              android:textColor="@android:color/holo_blue_light"
              android:textSize="14sp" />
          </RelativeLayout>
        </androidx.cardview.widget.CardView>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
